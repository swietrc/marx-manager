- if current_user.nil?
  / Bootstrap Core CSS
  %link{:href => "css/bootstrap.min.css", :rel => "stylesheet"}/
  / Custom CSS
  %link{:href => "css/landing-page.css", :rel => "stylesheet"}/
  / Custom Fonts
  %link{:href => "font-awesome/css/font-awesome.min.css", :rel => "stylesheet", :type => "text/css"}/
  %link{:href => "https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic", :rel => "stylesheet", :type => "text/css"}/
  %body
  / Header
  %a{:name => "about"}
  .intro-header
    .container
      .row
        .col-lg-12
          .intro-message
            %h1 Marx Manager
            %h3 Le gestionnaire de notes que vous attendiez
            %hr.intro-divider/
            %ul.list-inline.intro-social-buttons
              %li
                %a.btn.btn-default.btn-lg{:href => "https://twitter.com/realDonaldTrump"}
                  %i.fa.fa-twitter.fa-fw
                  %span.network-name Twitter
              %li
                %a.btn.btn-default.btn-lg{:href => "https://github.com/swietrc/marx-manager"}
                  %i.fa.fa-github.fa-fw
                  %span.network-name Github
    / /.container
  / /.intro-header
  / Page Content
  %a{:name => "services"}
  .content-section-a
    .container
      .row
        .col-lg-5.col-sm-6
          %hr.section-heading-spacer/
          .clearfix
          %h2.section-heading
            Death to the Stock Photo:
            %br>/
            Special Thanks
          %p.lead
            A special thanks to
            %a{:href => "http://join.deathtothestockphoto.com/", :target => "_blank"} Death to the Stock Photo
            for providing the photographs that you see in this template. Visit their website to become a member.
        .col-lg-5.col-lg-offset-2.col-sm-6
          %img.img-responsive{:alt => "", :src => "assets/ipad.png"}/
    / /.container
  / /.content-section-a
  .content-section-b
    .container
      .row
        .col-lg-5.col-lg-offset-1.col-sm-push-6.col-sm-6
          %hr.section-heading-spacer/
          .clearfix
          %h2.section-heading
            3D Device Mockups
            %br>/
            by PSDCovers
          %p.lead
            Turn your 2D designs into high quality, 3D product shots in seconds using free Photoshop actions by
            = succeed "!" do
              %a{:href => "http://www.psdcovers.com/", :target => "_blank"} PSDCovers
        .col-lg-5.col-sm-pull-6.col-sm-6
          %img.img-responsive{:alt => "", :src => "assets/dog.png"}/
    / /.container
  / /.content-section-b
  .content-section-a
    .container
      .row
        .col-lg-5.col-sm-6
          %hr.section-heading-spacer/
          .clearfix
          %h2.section-heading
            Google Web Fonts and
            %br>/
            Font Awesome Icons
          %p.lead
            This template features the 'Lato' font, part of the
            = succeed "," do
              %a{:href => "http://www.google.com/fonts", :target => "_blank"} Google Web Font library
            = succeed "." do
              %a{:href => "http://fontawesome.io", :target => "_blank"} icons from Font Awesome
        .col-lg-5.col-lg-offset-2.col-sm-6
          %img.img-responsive{:alt => "", :src => "assets/phones.png"}/
    / /.container
  / /.content-section-a
  %a{:name => "contact"}
  .banner
    .container
      .row
        .col-lg-6
          %h2 Connect to Start Bootstrap:
        .col-lg-6
          %ul.list-inline.banner-social-buttons
            %li
              %a.btn.btn-default.btn-lg{:href => "https://twitter.com/realDonaldTrump "}
                %i.fa.fa-twitter.fa-fw
                %span.network-name Twitter
            %li
              %a.btn.btn-default.btn-lg{:href => "https://github.com/swietrc/marx-manager"}
                %i.fa.fa-github.fa-fw
                %span.network-name Github
    / /.container
  / /.banner
  / Footer
  %footer
    .container
      .row
        .col-lg-12
          %ul.list-inline
            %li
              %a{:href => "#"} Home
            %li.footer-menu-divider ⋅
            %li
              %a{:href => "#about"} About
            %li.footer-menu-divider ⋅
            %li
              %a{:href => "#services"} Services
            %li.footer-menu-divider ⋅
            %li
              %a{:href => "#contact"} Contact
          %p.copyright.text-muted.small Copyright © Your Company 2014. All Rights Reserved
  / jQuery
  %script{:src => "js/jquery.js"}
  / Bootstrap Core JavaScript
  %script{:src => "js/bootstrap.min.js"}




    /= link_to new_user_session_path, class: 'login-button' do
    /Sign in
- if can? :manage, User
  = link_to admin_path, class: 'login-button' do
    Go to Admin page
- if current_user && current_user.is_teacher
  = link_to "Teacher", teacher_index_path
- if current_user && current_user.active_for_authentication?
  = link_to "Admin", admin_path if can? :manage, User
- if current_user && !current_user.is_teacher
  = link_to "Test", student_index_path
