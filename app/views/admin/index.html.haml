%h1 Gestion des utilisateurs
= link_to "Inviter des utilisateurs", new_user_invitation_path
%table{ :class => "table table-striped table-hover" }
  %thead
    %tr 
      %th Nom
      %th Prénom
      %th Email
      %th Admin
      %th Prof.
      %th
      %th
  %tbody
  - @users.each do |u|
    %tr
      %td
        = u.last_name
      %td
        = u.first_name
      %td
        = u.email
      %td
        = u.is_admin
      %td
        = u.is_teacher
      %td
        = link_to 'Modifier', edit_user_path(u)
      %td 
        = link_to 'Supprimer', user_path(u), method: :delete, data: { confirm: "Êtes-vous sûr ?" }