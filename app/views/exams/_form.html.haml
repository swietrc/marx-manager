= form_for [@exam.subject, @exam] do |f|
  - if @exam.errors.any?
    #error_explanation
      %h2= "#{pluralize(@exam.errors.count, "error")} prohibited this exam from being saved:"
      %ul
        - @exam.errors.full_messages.each do |msg|
          %li= msg  

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :date
    = f.date_select :date
  .field{:style => "display: none"}
    = f.label :subject_id
    = f.number_field :subject_id
  .actions
    = f.submit 'Save'